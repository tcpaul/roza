    <ImageButton
        android:src="@drawable/rundinfo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="15dp"
        android:scaleType="fitCenter"
        android:id="@+id/info"
        android:clickable="true"
        android:onClick="info"
